    "    \n",
    "        msg = MIMEMultipart()\n",
    "        msg['Subject'] = content[\"subject\"]\n",
    "        msg.attach(MIMEText(content[\"body\"], 'html'))\n",
    "        msg['To'] = email\n",
    "    \n",
